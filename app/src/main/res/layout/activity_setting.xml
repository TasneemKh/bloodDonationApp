<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="#FAF8F0"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:background="#00000000"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="#043353"
            android:fontFamily="@font/cambria_bold"
            android:textAllCaps="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-60dp">
            <ImageView
                android:id="@+id/setting_imageView"
                android:layout_width="wrap_content"
                android:layout_height="270dp"
                android:contentDescription="setting image"
                app:srcCompat="@drawable/ic_setting"
                />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_gravity="center"
            app:cardCornerRadius="19dp"
android:background="@color/colorWhite"            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                >

                <Button
                    android:id="@+id/edit_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_edit_profile"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/cambria_bold"
                    android:letterSpacing="0"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:textColor="#043353"
                    android:textSize="17sp" />
                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#043353"
                    android:alpha="0.1"

                    />

                <!--                /*****************-->
                <Button
                    android:id="@+id/update_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_update_password"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/cambria_bold"
                    android:letterSpacing="0"
                    android:text="Update Password"
                    android:textAllCaps="false"

                    android:textColor="#043353"
                    android:textSize="17sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#043353"
                    android:alpha="0.1"
                    />
                <!--                ******************-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/contact_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact us"
                        android:drawableLeft="@drawable/ic_contact_us"
                        android:drawablePadding="10dp"
                        android:textSize="17sp"
                        android:fontFamily="@font/cambria_bold"
                        android:textColor="#043353"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="0dp"
                        android:textAllCaps="false"
                        android:background="#00000000"
                        android:letterSpacing="0"
                        />
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Questions?"
                        android:textSize="15sp"
                        android:fontFamily="@font/cambria_regular"
                        android:textColor="#043353"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="0dp"
                        android:textAllCaps="false"
                        android:background="#00000000"

                        android:letterSpacing="0"
                        android:layout_alignParentEnd="true"
                        android:paddingRight="0dp"
                        />

                </RelativeLayout>
                <!--                ***************************-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.1"
                    android:background="#043353" />

                <Button
                    android:id="@+id/logOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:drawableLeft="@drawable/ic_log_out"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/cambria_bold"
                    android:textColor="#043353"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="0dp"
                    android:textAllCaps="false"
                    android:background="#00000000"
                    android:letterSpacing="0"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#043353"
                    android:alpha="0.1"
                    />
                <!--                ************************-->
                <Button
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:drawableLeft="@drawable/ic_about"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/cambria_bold"
                    android:textColor="#043353"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="0dp"
                    android:textAllCaps="false"
                    android:background="#00000000"
                    android:letterSpacing="0"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#043353"
                    android:alpha="0.1"
                    android:layout_marginBottom="30dp"
                    />

            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>




</LinearLayout>